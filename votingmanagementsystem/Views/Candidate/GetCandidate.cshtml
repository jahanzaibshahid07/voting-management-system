@model IEnumerable<votingmanagementsystem.Models.Candidatemodel>

<p>
    @Html.ActionLink("Add New Candidate", "AddCandidate")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.candidate_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.party_id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.candidate_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.party_id)
            </td>
          
            <td>
                @Html.ActionLink("Edit", "EditCandidate", new { id = item.candidate_id }) |
                @Html.ActionLink("Delete", "DeleteCandidate", new { id = item.candidate_id }, new { onclick = "return confirm('Are sure wants to delete?');" })
            </td>
        </tr>

    }

</table>
